(executable
 (name main)
 (libraries reason ppxlib jsoo_react_ppx))

(rule
 (targets pp.result)
 (deps test.ml)
 (action
  (run ./main.exe --impl %{deps} -o %{targets})))

(rule
 (targets test.ml)
 (deps input.re)
 (action
  (with-stdout-to
   %{targets}
   (run refmt --parse=re --print=ml %{deps}))))

(rule
 (alias runtest)
 (action
  (diff pp.expected pp.result)))
